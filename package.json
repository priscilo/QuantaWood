{
  "name": "quantawood",
  "version": "1.0.0",
  "description": "Sistema integral para trazabilidad y análisis de productos madereros. Frontend en React/Vite, backend en Spring Boot.",
  "type": "commonjs",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "scripts": "scripts"
  },
  "scripts": {
    "dev": "npm run validate && concurrently \"npm run backend\" \"npm run frontend\"",
    "frontend": "cd frontend && npm run dev",
    "backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "preview": "cd frontend && npm run preview",
    "lint": "eslint \"frontend/src/**/*.{js,jsx,ts,tsx}\"",
    "format": "prettier --write \"frontend/src/**/*.{js,jsx,ts,tsx,scss}\"",
    "validate": "node ./scripts/check-env.js",
    "docs": "node ./scripts/generate-docs.js",
    "start": "npm run dev",
    "test": "echo \"Agrega pruebas en ./tests\" && exit 0"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "nanoid": "^3.3.11",
    "picocolors": "^1.1.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "magic-string": "^0.30.21",
    "graceful-fs": "^4.2.11",
    "enhanced-resolve": "^5.18.3",
    "lightningcss": "^1.30.2",
    "lightningcss-win32-x64-msvc": "^1.30.2",
    "tapable": "^2.3.0",
    "detect-libc": "^2.1.2",
    "jiti": "^2.6.1",
    "source-map-js": "^1.2.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "sass-embedded": "^1.93.3",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/priscilo/QuantaWood.git"
  },
  "bugs": {
    "url": "https://github.com/priscilo/QuantaWood/issues"
  },
  "homepage": "https://github.com/priscilo/QuantaWood#readme",
  "keywords": [
    "inventario",
    "trazabilidad",
    "madera",
    "springboot",
    "vite",
    "react",
    "aserradero",
    "multicultural",
    "defensivo",
    "onboarding"
  ],
  "author": "Priscilo Pomachagua Durán",
  "onboarding": {
    "frontend": "React + Vite + Tailwind + SCSS",
    "backend": "Spring Boot",
    "start": "npm run dev",
    "build": "npm run build",
    "docs": "npm run docs",
    "env": ".env requerido en frontend y backend",
    "estructura": "Modular, defensiva, con rutas y assets documentados"
  }
}