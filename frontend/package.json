    "react-dom": "^18.3.1",
    "react-router-dom": "^7.9.6"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.19",
    "esbuild": "^0.27.0",
    "eslint": "^8.56.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.0",
    "vite": "^7.2.2",
    "vite-plugin-csp": "^1.1.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "defaults"
  ],
  "onboarding": {
    "estructura": "React + Vite + Tailwind + PostCSS",
